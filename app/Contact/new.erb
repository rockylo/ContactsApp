<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @contact.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @contact.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="contact[FirstName]" class="fieldLabel">Firstname</label>
            <input type="text" id="contact[FirstName]" name="contact[FirstName]" <%= placeholder("Firstname") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="contact[LastName]" class="fieldLabel">Lastname</label>
            <input type="text" id="contact[LastName]" name="contact[LastName]" <%= placeholder("Lastname") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="contact[Phone]" class="fieldLabel">Phone</label>
            <input type="text" id="contact[Phone]" name="contact[Phone]" <%= placeholder("Phone") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="contact[Email]" class="fieldLabel">Email</label>
            <input type="text" id="contact[Email]" name="contact[Email]" <%= placeholder("Email") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>

<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @contact.object %>
    <h1>Edit <%= @contact.FirstName%></h1>
    <%= link_to "Delete", :action => :delete, :id => @contact.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @contact.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Firstname: </td>
              <td class="itemValue"><input type="text" name="contact[FirstName]" value="<%= @contact.FirstName %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Lastname: </td>
              <td class="itemValue"><input type="text" name="contact[LastName]" value="<%= @contact.LastName %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Phone: </td>
              <td class="itemValue"><input type="text" name="contact[Phone]" value="<%= @contact.Phone %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Email: </td>
              <td class="itemValue"><input type="text" name="contact[Email]" value="<%= @contact.Email %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
